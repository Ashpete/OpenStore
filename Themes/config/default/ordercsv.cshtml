@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightRazor>
@using System
@using System.Globalization
@using System.Linq
@using System.Text
@using System.Web
@using System.Web.Razor.Parser
@using System.Web.Razor.Parser.SyntaxTree
@using System.Xml
@using DotNetNuke.Common
@using NBrightDNN
@using Nevoweb.DNN.NBrightBuy.Components;
@foreach (NBrightInfo nbi in Model.List)
{
    var strOut = "";
    strOut += nbi.GetXmlProperty("genxml/ordernumber").Replace(";",":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/firstname").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/lastname").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/email").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/street").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/city").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/region").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/textbox/postalcode").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/billaddress/genxml/dropdownlist/country/@selectedtext").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/createddate").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlPropertyDouble("genxml/appliedtotal");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/item/genxml/unitcost").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlPropertyDouble("genxml/item/genxml/dealercost");
    strOut += ";";
    strOut += nbi.GetXmlPropertyDouble("genxml/item/genxml/saleprice");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/item/genxml/modelref").Replace(";", ":");
    strOut += ";";
    strOut += nbi.GetXmlProperty("genxml/item/genxml/modeldesc").Replace(";", ":");
    @(strOut + Environment.NewLine)
}